<resources>
    <!--view 横分割线-->
    <style name="ViewDividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_04</item>
    </style>

    <style name="ViewDividerStyle.White">
        <item name="android:background">@color/primary_white</item>
    </style>

    <style name="ViewDividerStyle.Gray">
        <item name="android:background">@color/divider</item>
    </style>

    <style name="ViewDividerStyle.Primary">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <!--view 竖分割线-->
    <style name="ViewVerticalDividerStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">@dimen/dp_04</item>
    </style>

    <style name="ViewVerticalDividerStyle.Gray">
        <item name="android:background">@color/divider</item>
    </style>

    <style name="ViewDividerStyle.Gray.Detail">
        <item name="android:layout_marginBottom">@dimen/dp_10</item>
        <item name="android:layout_marginTop">@dimen/dp_10</item>
    </style>
</resources>
