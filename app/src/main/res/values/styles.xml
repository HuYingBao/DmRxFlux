<resources>

    <style name="RightAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_right_in</item>
        <item name="android:windowExitAnimation">@anim/anim_right_out</item>
    </style>

    <style name="RecyclerViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clipChildren">false</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="CirclePageStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:padding">@dimen/dp_10</item>
    </style>

    <style name="CheckBoxLoginStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primary_white</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="RatingBarStyle" parent="@android:style/Widget.RatingBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/ic_rating_bar</item>
        <item name="android:indeterminateDrawable">@drawable/ic_rating_bar</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:minHeight">@dimen/dp_16</item>
        <item name="android:maxHeight">@dimen/dp_100</item>
        <item name="android:thumb">@null</item>
        <item name="android:isIndicator">true</item><!-- 不支持用户交互，只应作为指标。 -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:numStars">3</item>
    </style>

    <style name="TabLayoutCustomStyle" parent="Widget.Design.TabLayout">
        <item name="tabMaxWidth">@dimen/dp_200</item>
        <!--设定游标颜色-->
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <!--设定游标高度-->
        <item name="tabIndicatorHeight">@dimen/dp_2</item>
        <item name="tabPaddingStart">@dimen/dp_4</item>
        <item name="tabPaddingEnd">@dimen/dp_4</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/TabTextCustomAppearance</item>
        <item name="tabSelectedTextColor">?android:textColorPrimary</item>
    </style>

    <style name="TabTextCustomAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:textColor">@color/bg_click_text_tab</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ItemStyle">
        <item name="android:background">@drawable/bg_click_item</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="ScrollDetailContentStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="TextTableStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/dp_16</item>
        <item name="android:paddingTop">@dimen/dp_16</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="TextTableStyle.Small">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/dp_16</item>
        <item name="android:paddingTop">@dimen/dp_16</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="TextTableStyle.Delete">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/dp_4</item>
        <item name="android:paddingTop">@dimen/dp_4</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="TextMainTabItemStyle.Device">
        <item name="android:paddingBottom">@dimen/dp_10</item>
        <item name="android:paddingTop">@dimen/dp_10</item>
    </style>

    <style name="ViewVerticalDividerStyle.Gray.Device">
        <item name="android:layout_marginTop">@dimen/dp_10</item>
        <item name="android:layout_marginBottom">@dimen/dp_10</item>
    </style>

    <style name="LinearLayoutBottomButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="TextViewButtonStyle.Bottom">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="TextFilterStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dp_20</item>
        <item name="android:layout_marginTop">@dimen/dp_20</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="RecyclerFilterStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dp_20</item>
        <item name="android:layout_marginRight">@dimen/dp_20</item>
        <item name="android:layout_marginTop">@dimen/dp_10</item>
    </style>

    <style name="LinearExpandItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/bg_click_item_st_gray</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">@dimen/dp_10</item>
    </style>

    <style name="LinearExpandPlanItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_click_item_st_gray</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="SwitchViewStyle">
        <item name="android:layout_width">@dimen/dp_60</item>
        <item name="android:layout_height">@dimen/dp_28</item>
        <item name="android:background">@null</item>
        <item name="android:scaleType">centerInside</item>
    </style>
</resources>
