<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_guide_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.huyingbao.rxflux2.widget.circleindicator.CirclePageIndicator
        android:id="@+id/cpid_guide"
        style="@style/CirclePageStyle" />

    <Button
        android:id="@+id/btn_guide_start"
        style="@style/ButtonLoginStyle"
        android:layout_above="@id/cpid_guide"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_40"
        android:text="@string/action_login"
        android:visibility="invisible"
        tools:visibility="visible" />
</RelativeLayout>
