<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_click_item_st_gray"
    android:orientation="horizontal"
    android:padding="@dimen/dp_10">

    <TextView
        android:id="@+id/tv_maintain_item_title"
        style="@style/TextItemContentStyle"
        android:textSize="@dimen/sp_16"
        tools:text="2017-01-29" />

    <ImageView
        android:id="@+id/iv_maintain_item_title_result"
        style="@style/ImageResultStyle"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        tools:src="@drawable/ic_v_result_success" />

    <ImageView
        android:id="@+id/iv_maintain_item_title_drop"
        style="@style/ImageResultStyle"
        tools:src="@drawable/ic_v_to_right" />

</LinearLayout>