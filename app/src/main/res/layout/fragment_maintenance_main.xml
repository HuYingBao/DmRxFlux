<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.flyco.tablayout.SegmentTabLayout
        android:id="@+id/stl_maintenance_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_28"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        app:tl_bar_color="@color/primary_white"
        app:tl_bar_stroke_color="@color/divider"
        app:tl_indicator_color="@color/primary"
        app:tl_indicator_corner_radius="@dimen/dp_4"
        app:tl_tab_space_equal="true"
        app:tl_textSelectColor="@color/primary_white"
        app:tl_textUnselectColor="@color/text_primary"
        app:tl_textsize="@dimen/sp_14" />


    <FrameLayout
        android:id="@+id/fl_maintenance_content"
        style="@style/FrameLayoutStyle" />

</LinearLayout>