<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_bottom"
    style="@style/LinearHorizontalStyle.MatchWidth"
    android:gravity="center"
    tools:background="@drawable/bg_click_btn_primary">

    <LinearLayout
        android:id="@+id/ll_bottom_1"
        style="@style/LinearVerticalStyle.MatchWidth"
        android:layout_weight="1"
        android:gravity="center"
        tools:background="@drawable/bg_click_btn_primary">

        <TextView
            android:id="@+id/tv_bottom_action_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:adjustViewBounds="true"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center"
            android:textColor="@color/primary_white"
            android:textSize="@dimen/sp_14"
            tools:drawableLeft="@drawable/ic_device_repair"
            tools:text="@string/title_repair"></TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bottom_2"
        style="@style/LinearVerticalStyle.MatchWidth"
        android:layout_weight="1"
        android:gravity="center"
        android:visibility="gone"
        tools:background="@drawable/bg_click_btn_primary"
        tools:visibility="visible">

        <TextView
            android:id="@+id/tv_bottom_action_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:adjustViewBounds="true"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center"
            android:textColor="@color/primary_white"
            android:textSize="@dimen/sp_14"
            tools:drawableLeft="@drawable/ic_device_repair"
            tools:text="@string/title_repair"></TextView>
    </LinearLayout>
</LinearLayout>